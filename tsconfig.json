{
  "compilerOptions": {
    "rootDir": "./src/main/ts/",
    "baseUrl": "./src/main/ts/",
    "strict": true,
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowJs": false,
    "allowImportingTsExtensions": true,
    "noImplicitAny": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true,
  },
  "include": [
    "src/main/ts/"
  ],
  "exclude": [
    "node_modules",
    "src/test"
  ]
}
